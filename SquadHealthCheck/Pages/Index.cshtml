@page
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="activity-status">
                <img class="activity" src="images/Activity/support.png" />
            </div>
            <div class="user-actions">
                <img src="images/UserActions/green.png" />
                <img src="images/UserActions/yellow.png" />
                <img src="images/UserActions/red.png" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="room-status">
                <table class="table">
                    <tr>
                        <th>Vote</th>
                        <th>Player Name</th>
                    </tr>
                    <tr>
                        <td>Green</td>
                        <td>Han Solo</td>
                    </tr>
                    <tr>
                        <td>Red</td>
                        <td>Greedo</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<environment include="Development">
    <script src="~/lib/signalr/signalr.js"></script>    
</environment>
<environment exclude="Development">
    <script src="~/lib/signalr/signalr.min.js"></script>    
</environment>
<script src="~/js/chat.js" asp-append-version="true"></script>

@*
    If you need a version of the chat script that is compatible with IE 11, replace the above <script> tag that imports chat.js with this one
    <script src="~/js/es5-chat.js"></script>
*@
